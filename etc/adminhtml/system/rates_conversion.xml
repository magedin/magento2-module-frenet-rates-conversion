<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="rates_conversion" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1"
           showInStore="0">
        <label>Rates Conversion</label>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Is Conversion Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="not_convertible_countries" translate="label" type="multiselect" sortOrder="20" showInStore="0"
               showInWebsite="1" showInDefault="1">
            <label>Don't Convert Rates for These Countries</label>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
        </field>
